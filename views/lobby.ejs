<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Users:</h1>
    <ul>
        <% users.forEach(function(user) { %>
            <li><%= user %></li>
        <% }) %>
    </ul>

    <script>
        fetch('/ping', { method: 'POST' })
            .then(response => {
                if (!response.ok) {
                    console.log('Ping request failed');
                }
            })
            .catch(error => {
                console.log('Error with ping request:', error);
            });

        setInterval(() => {
            fetch('/ping', {method: 'POST'});
        }, 5000);
    </script>
</body>
</html>